{
  "$id": "personas.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CoSAI-RM Persona Schema",
  "description": "Schema for validating YAML-based persona definition",
  "type": "object",
  "properties": {
    "title": { "type": "string" },
    "description": { "$ref": "riskmap.schema.json#/definitions/utils/text" },
    "personas": {
      "type": "array",
      "items": { "$ref": "#/definitions/persona" }
    }
  },
  "required": ["title", "description", "personas"],
  "definitions": {
    "persona": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "enum": [
            "personaModelProvider",
            "personaDataProvider",
            "personaPlatformProvider",
            "personaAgenticProvider",
            "personaApplicationDeveloper",
            "personaGovernance",
            "personaEndUser",
            "personaModelCreator",
            "personaModelConsumer"
          ]
        },
        "title": { "type": "string" },
        "description": { "$ref": "riskmap.schema.json#/definitions/utils/text" },
        "deprecated": {
          "type": "boolean",
          "description": "Indicates if this persona is deprecated and superseded by newer personas",
          "default": false
        },
        "mappings": {
          "type": "object",
          "description": "Maps this persona to equivalent actors in external frameworks. Keys must match valid framework IDs defined in frameworks.schema.json.",
          "propertyNames": {
            "$ref": "frameworks.schema.json#/definitions/framework/properties/id"
          },
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "string",
              "description": "Framework-specific actor identifier"
            }
          },
          "examples": [
            {
              "iso-22989": ["AI system provider", "Data provider"]
            }
          ]
        },
        "responsibilities": {
          "type": "array",
          "description": "List of security control responsibilities for this persona",
          "items": { "type": "string", "minLength": 1 }
        },
        "identificationQuestions": {
          "type": "array",
          "description": "Questions to help identify if this persona applies",
          "items": { "type": "string", "minLength": 1 }
        }
      },
      "required": ["id", "title", "description"]
    }
  }
}
